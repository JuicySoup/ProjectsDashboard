             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Dashboard"
             xmlns:viewModel="clr-namespace:Dashboard.MVVM.ViewModel"
             xmlns:view="clr-namespace:Dashboard.MVVM.View"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme/MenuButtonTheme.xaml"/>
                <ResourceDictionary Source="Theme/TextBoxTheme.xaml"/>
                <ResourceDictionary Source="Theme/CategoryCard.xaml"/>
                <ResourceDictionary Source="Theme/NewProjectButton.xaml"/>
                <ResourceDictionary Source="Theme/CreateCategoryButton.xaml"/>
                <ResourceDictionary Source="Theme/ProjectPathTextBox.xaml"/>
                <ResourceDictionary Source="Theme/BrowseButton.xaml"/>
                <ResourceDictionary Source="Theme/ColorComboBox.xaml"/>
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </Application.Resources>
</Application>
